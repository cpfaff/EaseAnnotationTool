@using CAFE.Web.Controllers
@using CAFE.Web.Shared.Extensions;
@model CAFE.Web.Models.Account.ForgotPasswordViewModel
@{
	ViewBag.Title = "Forgot your password?";
}

<section class="container" id="RestorePasswordForm">
	<section class="login-form-style">
		@using (Html.BeginForm(
			nameof(AccountController.ForgotPassword),
			this.ControllerNameForRouting<AccountController>(),
			FormMethod.Post, new { role = "login-style" })
		)
		{
			<section>
				@Html.AntiForgeryToken()
				<h2 style="text-align: center;">Password restoring</h2>

				@if (true == ViewBag.IsSuccessRegister)
				{
					<div class="alert alert-success" role="alert">
						<i class="fa fa-check"></i> Account has been created successfully.
					</div>
				}

				else
				{
					<div class="form-group">
						@Html.LabelFor(m => m.EmailOrUserName)
						@Html.TextBoxFor(m => m.EmailOrUserName, new { @class = "form-control", required = "required" })
						@Html.ValidationMessageFor(m => m.EmailOrUserName)
					</div>

					<input type="submit" class="btn btn-block btn-primary" value="Restore" />
				}
			</section>
            <div>
                @Html.ActionLink("Log In", "Login")
                @Html.ActionLink("Create account", "Register", "Register", new { style = "float: right;" })

            </div>}
	</section>
</section>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
