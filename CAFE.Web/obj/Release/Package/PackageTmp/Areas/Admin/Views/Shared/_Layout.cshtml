<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administration</title>
    @Styles.Render("~/Content/admin/css")
    @Styles.Render("~/Content/admin.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body layout="column" class="layout-column">
    <div class="navbar navbar-fixed-top main-navbar">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><img src="/Content/images/logo.png" style="height: 100%;"></a>
            </div>
            <div class="navbar-collapse collapse" id="navbar-collapse" style="padding-right: 15px;">
                <ul class="nav navbar-nav">
                    <li><a href="/Dashboard">Dashboard</a></li>
                    <li><a href="/Search">Data search</a></li>
                    <li><a href="/AnnotationItem">Annotation item</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true">Access Requests <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/AccessRequests/Incoming">Incoming requests</a></li>
                            <li><a href="/AccessRequests/Outgoing">Outgoing requests</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Administration", "Index", "Home", routeValues: new { area = "Admin" }, htmlAttributes: new object())</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    @*<div class="container body-content">*@
        @RenderBody()
        @*<hr />*@
    @*</div>*@

    @Scripts.Render("~/bundles/admin/jquery")
    @Scripts.Render("~/bundles/admin/bootstrap")
    @Scripts.Render("~/bundles/admin/angular")
    @Scripts.Render("~/bundles/admin/app")
    @RenderSection("scripts", required: false)
</body>
</html>