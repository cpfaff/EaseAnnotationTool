@model CAFE.Web.Areas.Admin.Models.Home.IndexViewModel

<md-content layout="column" flex ng-app="admin" class="admin-content layout-column flex" ng-controller="adminController" ng-cloak>
    <section layout="row" flex>
        <md-sidenav class="md-sidenav-left"
                    md-component-id="left"
                    @*md-is-locked-open="$mdMedia('gt-md')"*@
                    md-is-locked-open="true"
                    md-whiteframe="2">

            <md-toolbar class="md-theme-indigo">
                <h1 class="md-toolbar-tools">Administration</h1>
                @if (Model.ShowNotifyAboutNewVersion)
                {
                    <div class="alert alert-warning" role="alert">A new version of schema available for download</div>
                }
            </md-toolbar>

            <md-content flex>
                <md-list ng-cloak>
                    @if (Model.ShowAcceptance)
                    {
                        <md-list-item ng-click="navigateTo('admin.acceptance', $event)" ng-class="{'selected-menu-item': activeMenuItem.current.name == 'admin.acceptance' }">
                            <p>User's registrations acceptance</p>
                        </md-list-item>
                    }
                    <md-list-item ng-click="navigateTo('admin.security', $event)" ng-class="{'selected-menu-item': activeMenuItem.current.name == 'admin.security' }">
                        <p>Security management</p>
                    </md-list-item>
                    <md-list-item ng-click="navigateTo('admin.masterdata', $event)" ng-class="{'selected-menu-item': activeMenuItem.current.name == 'admin.masterdata' }">
                        <p>User's vocabulary extensions</p>
                    </md-list-item>
                    <md-list-item ng-click="navigateTo('admin.annotation', $event)" ng-class="{'selected-menu-item': activeMenuItem.current.name == 'admin.annotation' }">
                        <p>Annotation Items management</p>
                    </md-list-item>
                </md-list>
            </md-content>
        </md-sidenav>
        <md-content layout="column" flex layout-padding>
            <div flex ui-view></div>
        </md-content>

    </section>
</md-content>
<hr>