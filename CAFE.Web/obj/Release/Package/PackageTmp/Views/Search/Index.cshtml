            height: 80%;
        }

        .uib-increment .btn, .uib-decrement .btn  
        {
            padding: 0;
            height: 10px;
        }
        .uib-time input {
            height: 26px;
        }

        .uib-decrement .btn
        {
            vertical-align: top;
            margin-top: -4px;
        }
        
