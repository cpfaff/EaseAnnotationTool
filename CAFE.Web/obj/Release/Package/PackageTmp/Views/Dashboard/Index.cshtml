<md-content layout="column" flex ng-app="usersDashboard" flex class="admin-content layout-column flex" ng-controller="userDashboardController" style="margin-top: 20px;" ng-cloak>
    <div class="container body-content">
        <div class="panel-group">
            @{
                if (ViewBag.isUsersAcceptanceNeed == true)
                {
                    <div class="panel panel-default panel-margin-bottom">
                        <div class="panel-heading">User acceptance requests</div>
                        <div class="panel-body">
                            <unaccepted-users-list></unaccepted-users-list>
                        </div>
                    </div>
                }
            }
            <div class="panel panel-default panel-margin-bottom">
                <div class="panel-heading">Access requests</div>
                <div class="panel-body">
                    <access-requests-list></access-requests-list>
                </div>
            </div>
            <div class="panel panel-default panel-margin-bottom">
                <div class="panel-heading">Files list</div>
                <div class="panel-body">
                    <files-list></files-list>
                </div>
            </div>
            <div class="panel panel-default panel-margin-bottom">
                <div class="panel-heading">Annotation Items</div>
                <div class="panel-body">
                    <annotation-items-list></annotation-items-list>
                </div>
            </div>
        </div>
    </div>
</md-content>

@section scripts
{
    @Scripts.Render("~/bundles/admin/angular")
    @Scripts.Render("~/bundles/users-dashboard")
    <script src="https://unpkg.com/ng-table@2.0.2/bundles/ng-table.min.js"></script>
}

@section styles
{
    @*@Styles.Render("~/Content/temp/css")*@
    @Styles.Render("~/bundles/users-dashboard/css")
    <link rel="stylesheet" ; href="https://unpkg.com/ng-table@2.0.2/bundles/ng-table.min.css">
}